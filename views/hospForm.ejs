<%- include ("partials/header") %>

    </div>



    <section id="storeOwner">
        <div class="container row">
            <h1 class="heading col-lg-3">Hospital Details</h1>
            <div class="container col-lg-9">
                <form action="/hospForm" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="row">
                            <div class="mb-3 col-lg-6">
                                <label for="hospName" class="form-label">Hospital Name</label>
                                <input type="text" name="hospName" class="form-control" id="hospName" autocomplete="false" required>
                            </div>
                            <div class="mb-3 col-lg-6">
                                <label for="hospAd" class="form-label">Hospital Address</label>
                                <input type="text" name="hospAd" class="form-control" id="hospAd" autocomplete="false" required>
                            </div>
                            <div class="mb-3 col-lg-6">
                                <label for="workForce" class="form-label">WorkForce</label>
                                <input type="text" name="workForce" class="form-control" id="workForce" autocomplete="false" placeholder="Total number of employees" required>
                            </div>
                            <div class="mb-3 col-lg-6">
                                <label for="bed" class="form-label">Number of beds:</label>
                                <input type="text" name="bed" class="form-control" id="bed" autocomplete="false" placeholder="Total number of employees" required>
                            </div>

                            <div class="mb-3 col-lg-6">
                                <!-- TO DO: countdown function to be added-->
                                <label for="spec" class="form-label">Specialization</label>
                                <input type="text" name="spec" class="form-control" id="spec" placeholder="field of expertise" required>
                            </div>
                        </div>
                        <div class="mb-3 col-lg-6">
                            <label for="desc" class="form-label">Facilities</label>
                            <input type="text" name="desc" class="form-control" id="desc" autocomplete="false" required>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-lg-12">
                                <!-- TO DO: make so that any number of images can be added and give each of them a number or Id-->
                                <label for="itemImage" class="form-label">Add Image</label>
                                <input type="file" name="itemImage" class="form-control filepond" id="itemImage">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </section>

    </body>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

    </html>